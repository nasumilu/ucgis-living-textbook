{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% import '_macro/_action_buttons.html.twig' as buttons %}
  {{ buttons.add_row(path(concept.instance ? 'app_concept_listinstances' : 'app_concept_list')) }}
{% endblock %}

{% block title %}
  {{ 'concept.add-title'|trans }}
{% endblock %}

{% block content %}
  {% from '_macro/_review.html.twig' import reviewNotice %}
  {{ reviewNotice(concept) }}

  {{ form(form) }}

  <script type="text/javascript">
    $(document).ready(function(){
      $('#{{ form.selfAssessment.vars.id }}').hide();
    });      
  </script>
{% endblock %}
